generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Avatar {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @default(now())
  version     String   @default("0.0.1")
  filePath    String   @unique
  primaryColor String?
  foreignColor String?
  colorScheme String?
  seed        String?
  
  @@map("avatars")
}
