{
  "openapi": "3.0.0",
  "paths": {
    "/emoji/health": {
      "get": {
        "description": "Returns the availability status of the Twemoji CDN service",
        "operationId": "EmojiController_healthCheck",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Health check completed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "available": {
                      "type": "boolean",
                      "description": "Whether Twemoji CDN is available"
                    },
                    "lastChecked": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Last check timestamp"
                    },
                    "responseTime": {
                      "type": "number",
                      "description": "Response time in milliseconds"
                    },
                    "error": {
                      "type": "string",
                      "description": "Error message if unavailable"
                    }
                  }
                }
              }
            }
          }
        },
        "summary": "Check Twemoji CDN availability",
        "tags": ["emoji"]
      }
    },
    "/palettes": {
      "get": {
        "operationId": "PalettesController_listPalettes",
        "parameters": [
          {
            "name": "pick",
            "required": false,
            "in": "query",
            "description": "Number of records to retrieve (default: 10)",
            "schema": {
              "minimum": 1,
              "maximum": 100,
              "example": 10,
              "type": "number"
            }
          },
          {
            "name": "offset",
            "required": false,
            "in": "query",
            "description": "Number of records to skip (default: 0)",
            "schema": {
              "minimum": 0,
              "example": 0,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["Palettes"]
      },
      "post": {
        "operationId": "PalettesController_createPalette",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePaletteDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": ""
          }
        },
        "tags": ["Palettes"]
      }
    },
    "/palettes/{id}": {
      "get": {
        "operationId": "PalettesController_getPaletteById",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["Palettes"]
      },
      "put": {
        "operationId": "PalettesController_updatePalette",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePaletteDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["Palettes"]
      },
      "delete": {
        "operationId": "PalettesController_deletePalette",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": ""
          }
        },
        "tags": ["Palettes"]
      }
    },
    "/generate": {
      "post": {
        "operationId": "AvatarController_generateAvatarV3",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenerateAvatarV3Dto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Emoji avatar generated successfully"
          }
        },
        "summary": "Generate emoji avatar (API v3)",
        "tags": ["Avatar"]
      }
    },
    "/health": {
      "get": {
        "operationId": "HealthController_getHealth",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["Health"]
      }
    },
    "/list": {
      "get": {
        "operationId": "AvatarController_listAvatars",
        "parameters": [
          {
            "name": "pick",
            "required": false,
            "in": "query",
            "description": "Number of records to retrieve (default: 10, max: 100)",
            "schema": {
              "minimum": 1,
              "maximum": 100,
              "example": 10,
              "type": "number"
            }
          },
          {
            "name": "offset",
            "required": false,
            "in": "query",
            "description": "Number of records to skip (default: 0)",
            "schema": {
              "minimum": 0,
              "example": 0,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Avatar list retrieved successfully"
          },
          "204": {
            "description": "No avatars found"
          }
        },
        "summary": "Get list of avatars with pagination",
        "tags": ["Avatar"]
      }
    },
    "/{id}": {
      "get": {
        "operationId": "AvatarController_getAvatar",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Avatar ID (UUID)",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "filter",
            "required": false,
            "in": "query",
            "description": "Filter to apply (grayscale, sepia, negative)",
            "schema": {
              "example": "grayscale",
              "type": "string",
              "enum": ["grayscale", "sepia", "negative"]
            }
          },
          {
            "name": "size",
            "required": false,
            "in": "query",
            "description": "Size parameter (4-9, where 2^n)",
            "schema": {
              "minimum": 4,
              "maximum": 9,
              "example": 6,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Avatar retrieved successfully"
          },
          "400": {
            "description": "Bad request - invalid parameters"
          },
          "404": {
            "description": "Avatar not found"
          }
        },
        "summary": "Get avatar by ID",
        "tags": ["Avatar"]
      },
      "delete": {
        "operationId": "AvatarController_deleteAvatar",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Avatar ID (UUID)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Avatar deleted successfully"
          }
        },
        "summary": "Delete avatar by ID",
        "tags": ["Avatar"]
      }
    },
    "/health/detailed": {
      "get": {
        "operationId": "HealthController_getDetailedHealth",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["Health"]
      }
    },
    "/swagger-docs": {
      "get": {
        "operationId": "SwaggerDocsController_getSwaggerDocument",
        "parameters": [],
        "responses": {
          "200": {
            "description": ""
          }
        },
        "tags": ["SwaggerDocs"]
      }
    }
  },
  "info": {
    "title": "Avatar Generation API",
    "description": "API for generating and managing avatars similar to GitHub/GitLab",
    "version": "1.0.0",
    "contact": {}
  },
  "tags": [
    {
      "name": "Avatar",
      "description": "Avatar generation and management endpoints"
    }
  ],
  "servers": [],
  "components": {
    "schemas": {
      "CreatePaletteDto": {
        "type": "object",
        "properties": {}
      },
      "UpdatePaletteDto": {
        "type": "object",
        "properties": {}
      },
      "GenerateAvatarDto": {
        "type": "object",
        "properties": {
          "primaryColor": {
            "type": "string",
            "description": "Primary color for avatar generation"
          },
          "foreignColor": {
            "type": "string",
            "description": "Foreign color for avatar generation"
          },
          "colorScheme": {
            "type": "string",
            "description": "Color scheme name"
          },
          "type": {
            "type": "string",
            "description": "Generation type (pixelize, wave, etc.)",
            "example": "pixelize"
          },
          "seed": {
            "type": "string",
            "description": "Seed phrase for avatar generation (required, max 255 characters)",
            "maxLength": 255,
            "example": "my-unique-seed-phrase"
          }
        },
        "required": ["seed"]
      },
      "GenerateAvatarV2Dto": {
        "type": "object",
        "properties": {
          "primaryColor": {
            "type": "string",
            "description": "Primary color for gradient generation"
          },
          "foreignColor": {
            "type": "string",
            "description": "Foreign color for gradient generation"
          },
          "colorScheme": {
            "type": "string",
            "description": "Color scheme name"
          },
          "angle": {
            "type": "number",
            "description": "Gradient rotation angle in degrees (0-360)",
            "minimum": 0,
            "maximum": 360,
            "example": 90
          }
        },
        "required": ["angle"]
      },
      "GenerateAvatarV3Dto": {
        "type": "object",
        "properties": {
          "emoji": {
            "type": "string",
            "description": "Unicode emoji character",
            "example": "ðŸ˜€",
            "maxLength": 20
          },
          "backgroundType": {
            "type": "string",
            "description": "Background type for the avatar",
            "enum": ["solid", "linear", "radial"],
            "example": "solid"
          },
          "primaryColor": {
            "type": "string",
            "description": "Primary color for background generation (hex format)",
            "example": "#3B82F6",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "foreignColor": {
            "type": "string",
            "description": "Secondary color for gradient backgrounds (hex format)",
            "example": "#EF4444",
            "pattern": "^#[0-9A-Fa-f]{6}$"
          },
          "angle": {
            "type": "number",
            "description": "Gradient angle in degrees (0-360, only for linear background)",
            "minimum": 0,
            "maximum": 360,
            "example": 90
          },
          "emojiSize": {
            "type": "string",
            "description": "Size of the emoji relative to avatar",
            "enum": ["small", "medium", "large"],
            "example": "large",
            "default": "large"
          }
        },
        "required": ["emoji", "backgroundType"]
      }
    }
  }
}
