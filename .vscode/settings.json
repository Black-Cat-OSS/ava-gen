{
  "workbench.iconTheme": "catppuccin-macchiato",
  "background.enabled": true,
  "background.useDefault": false,
  "background.customImages": ["путь_к_вашему_изображению.jpg"],
  "background.style": {
    "content": "''",
    "pointer-events": "none",
    "position": "absolute",
    "z-index": "99999",
    "width": "100%",
    "height": "100%",
    "background-position": "center",
    "background-repeat": "no-repeat",
    "background-size": "cover",
    "opacity": 0.15
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "http.proxySupport": "off",
  "http.useLocalProxyConfiguration": false,
  "http.fetchAdditionalSupport": false,
  "http.systemCertificates": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.openRepositoryInParentFolders": "always",
  "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "cursor.composer.textSizeScale": 1.15,
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.enable_git_worktrees_setting": true,
  "cursor.agent_layout_browser_beta_setting": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.cursorStyle": "block",
  "editor.wordWrap": "wordWrapColumn",
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "iconColour": "#9de64e",
      "background": "#26854c",
      "foreground": "#d3eed3",
      "type": "text-and-comment"
    },
    "BUG": {
      "icon": "bug",
      "iconColour": "#c878af",
      "background": "#9a4d76",
      "foreground": "#ffd1d5",
      "type": "text-and-comment"
    },
    "HACK": {
      "icon": "tools",
      "iconColour": "#36c5f4",
      "background": "#3859b3",
      "foreground": "#6dead6",
      "type": "text-and-comment"
    },
    "FIXME": {
      "icon": "flame",
      "iconColour": "#e98537",
      "background": "#de5d3a",
      "foreground": "#f7f3b7",
      "type": "text-and-comment"
    },
    "XXX": {
      "icon": "x",
      "iconColour": "#ec273f",
      "background": "#6b2643",
      "foreground": "#ffd1d5",
      "type": "text-and-comment"
    }
  },
  "postman.settings.dotenv-detection-notification-visibility": false
}
