{
  "name": "avatar-gen",
  "version": "0.0.1",
  "description": "Avatar Generator API with frontend and backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "dev": "npm run dev --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md,yml,yaml}\"",
    "test": "npm run test --workspaces",
    "prepare": "husky install",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "lint:backend": "eslint \"backend/**/*.{ts,js}\" --config backend/eslint.config.mjs",
    "lint:backend:fix": "eslint \"backend/**/*.{ts,js}\" --config backend/eslint.config.mjs --fix",
    "format:backend": "prettier --write \"backend/**/*.{ts,js,json,md,yml,yaml}\"",
    "format:backend:check": "prettier --check \"backend/**/*.{ts,js,json,md,yml,yaml}\""
  },
  "keywords": [
    "avatar",
    "generator",
    "api",
    "nestjs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "eslint --config backend/eslint.config.mjs --fix",
      "prettier --write"
    ],
    "frontend/**/*.{ts,js,tsx,jsx}": [
      "eslint --config frontend/eslint.config.js --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
